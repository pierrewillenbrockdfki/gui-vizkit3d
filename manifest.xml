<package>
    <description brief="Rock Visualization Library">
	Provides a Qt based framework for visualisation of rock data items.
	Visualisation plugins for specific data items are within the respective packages.
    </description>
    <author>Jakob Schwendner/jakob.schwendner@dfki.de</author>
    <maintainer>Steffen Planthaber/steffen.planthaber@dfki.de</maintainer>
    <copyright>
	DFKI/robotik@dfki.de
    </copyright>
    <keywords>
     <keyword>utilities</keyword>
     <keyword>ui</keyword>
     <keyword>visualization</keyword>
     <keyword>vizkit3d</keyword>
    </keywords>
    <stage>-1</stage>
    <!-- qt4 version dependencies -->
    <depend package="osg" optional="1" />
    <depend package="qt4" optional="1" />
    <depend package="qt4-opengl" optional="1" />
    <depend package="gui/osg_qt4" optional="1" />
    <!-- qt5 version dependencies -->
    <depend package="qt5" optional="1" />
    <depend package="qt5-opengl" optional="1" />
    <depend package="gui/osg_qt5" optional="1" />
    <depend package="gui/qtpropertybrowser" optional="1" />
    <!-- common dependencies -->
    <depend package="boost" />
    <depend package="base/cmake" />
    <depend package="gui/osgviz" />
    <!--    <depend package="qt-designer" /> !-->
</package>
